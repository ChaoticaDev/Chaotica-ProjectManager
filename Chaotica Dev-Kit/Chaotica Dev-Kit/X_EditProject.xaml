<Page
    x:Class="Chaotica_Dev_Kit.X_EditProject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chaotica_Dev_Kit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
            <TextBlock x:Name="c_ProjectID" Text="Project ID: 0" Margin="0,0,0,5"/>

            <TextBox x:Name="xTitle" Width="250" TextAlignment="Center" Padding="5" PlaceholderText="Project title" />

            <Button Content="Update" Width="250" Margin="0,5,0,0" Click="Button_Click"/>
            <Button Content="Cancel" Width="250" Margin="0,5,0,0" Click="Button_Click_1"/>
        </StackPanel>
    </RelativePanel>
    
</Page>
